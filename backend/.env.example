# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=postgresql://inventory_user:inventory_password@db:5432/inventory_db

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# File Upload Configuration
MAX_CONTENT_LENGTH=52428800
UPLOAD_FOLDER=/tmp/uploads
LARGE_FILE_THRESHOLD=5242880

# CORS Configuration
# Add your frontend URLs (comma-separated)
# For local development: http://localhost:5173 (Vite default)
# For Lovable preview: https://YOUR_PROJECT.lovableproject.com
# For production: your production domain
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://*.lovableproject.com
